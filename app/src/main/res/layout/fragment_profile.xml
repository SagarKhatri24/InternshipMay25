<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/bgColor"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.profile.ProfileFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:id="@+id/profile_name"
            style="@style/edit_16"
            android:hint="Name" />

        <EditText
            android:id="@+id/profile_email"
            style="@style/edit_16"
            android:hint="Email"
            android:inputType="textEmailAddress" />

        <EditText
            android:id="@+id/profile_contact"
            style="@style/edit_16"
            android:hint="Contact No."
            android:inputType="phone"
            android:maxLength="10" />

        <EditText
            android:id="@+id/profile_password"
            style="@style/edit_16"
            android:hint="Password"
            android:inputType="textPassword"
            android:maxLength="15" />

        <EditText
            android:id="@+id/profile_confirm_password"
            style="@style/edit_16"
            android:hint="Confirm Password"
            android:inputType="textPassword"
            android:maxLength="15" />

        <RadioGroup
            android:id="@+id/profile_gender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:orientation="horizontal"
            android:weightSum="2">

            <RadioButton
                android:id="@+id/profile_male"
                style="@style/radio_16"
                android:text="Male" />

            <RadioButton
                android:id="@+id/profile_female"
                style="@style/radio_16"
                android:text="Female" />

        </RadioGroup>

        <Spinner
            android:id="@+id/profile_country"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_20sdp"
            android:layout_marginTop="10sp" />

        <Button
            android:id="@+id/profile_update"
            style="@style/button_16"
            android:text="Update Profile" />

        <Button
            android:id="@+id/profile_logout"
            style="@style/button_16"
            android:text="Logout" />
    </LinearLayout>
</ScrollView>