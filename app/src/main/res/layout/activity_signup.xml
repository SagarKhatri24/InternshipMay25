<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    style="@style/bgColor"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignupActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:id="@+id/signup_name"
            style="@style/edit_16"
            android:hint="Name" />

        <EditText
            android:id="@+id/signup_email"
            style="@style/edit_16"
            android:hint="Email"
            android:inputType="textEmailAddress" />

        <EditText
            android:id="@+id/signup_contact"
            style="@style/edit_16"
            android:hint="Contact No."
            android:inputType="phone"
            android:maxLength="10" />

        <EditText
            android:id="@+id/signup_password"
            style="@style/edit_16"
            android:hint="Password"
            android:inputType="textPassword"
            android:maxLength="15" />

        <EditText
            android:id="@+id/signup_confirm_password"
            style="@style/edit_16"
            android:hint="Confirm Password"
            android:inputType="textPassword"
            android:maxLength="15" />

        <RadioGroup
            android:id="@+id/signup_gender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:orientation="horizontal"
            android:weightSum="2">

            <RadioButton
                android:id="@+id/signup_male"
                style="@style/radio_16"
                android:text="Male" />

            <RadioButton
                android:id="@+id/signup_female"
                style="@style/radio_16"
                android:text="Female" />

        </RadioGroup>

        <Spinner
            android:id="@+id/signup_country"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_20sdp"
            android:layout_marginTop="10sp" />

        <CheckBox
            android:id="@+id/signup_terms"
            style="@style/check_13"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:text="Terms And Condition" />

        <Button
            android:id="@+id/signup_button"
            style="@style/button_16"
            android:text="Signup" />

    </LinearLayout>

</ScrollView>