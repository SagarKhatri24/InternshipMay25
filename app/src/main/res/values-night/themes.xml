<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.InternshipMay25" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->
        <!-- <item name="colorPrimary">@color/my_dark_primary</item> -->
        <item name="android:fontFamily">@font/nunito_medium</item>
    </style>

    <style name="action_bar" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <item name="android:fontFamily">@font/nunito_medium</item>
    </style>

    <style name="bgColor">
        <item name="android:background">@color/black</item>
    </style>

    <style name="text_bold_20" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">@dimen/_20sdp</item>
        <item name="android:textColor">@color/blue</item>
        <item name="android:textSize">@dimen/_20sdp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="edit_16" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginHorizontal">@dimen/_20sdp</item>
        <item name="android:layout_marginTop">@dimen/_10sdp</item>
        <item name="android:background">@drawable/custom_border</item>
        <item name="android:padding">@dimen/_10sdp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/white_70</item>
        <item name="android:textSize">@dimen/_16sdp</item>
    </style>

    <style name="button_16" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginHorizontal">@dimen/_20sdp</item>
        <item name="android:layout_marginTop">@dimen/_30sdp</item>
        <item name="android:background">@drawable/custom_button</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/_16sdp</item>
        <item name="backgroundTint">@null</item>
    </style>

    <style name="text_16" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">@dimen/_20sdp</item>
        <item name="android:textColor">@color/white_70</item>
        <item name="android:textSize">@dimen/_16sdp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="radio_16" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:buttonTint">@color/white_70</item>
        <item name="android:textColor">@color/white_70</item>
        <item name="android:textSize">@dimen/_16sdp</item>
    </style>

    <style name="check_13" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/_13sdp</item>
        <item name="android:buttonTint">@color/white_70</item>
        <item name="android:textColor">@color/white_70</item>
    </style>

    <style name="text_13" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white_70</item>
        <item name="android:textSize">@dimen/_13sdp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="text_11" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white_70</item>
        <item name="android:textSize">@dimen/_11sdp</item>
    </style>

</resources>